<header> 
  <section class="anchor" id="top-section"></section>
  <nav class="navbar navbar-expand-lg fixed-top"> 
    <div class="container">
      <a class="navbar-brand hvr-fade" href="#top-section">Queuer</a>
      <section class="nav-section ml-auto">
        <a class="nav-links hvr-fade" href="#top-section">Home</a>
        <a class="nav-links hvr-fade" href="#create-section">Create</a>
        <a class="nav-links hvr-fade" href="#movie-search-section">Search</a>
        <a class="nav-links hvr-fade" href="#playlists-section">Playlists</a>
        <button class="btn btn-primary my-2 my-sm-0" id="login-btn" type="submit">Login</button>
      </section>
    </div> 
  </nav>
</header>

<div class="card-intro">
  <div class="container">
    <div class="title-text"> 
      <h1 class="text-center" id="main-title">Like Spotify but for movies</h1> 
      <h4 class="text-center" id="second-title">Search, review and create playlists for all your favorite movies.</h4>
    </div>
  </div>
</div>

<section class="anchor" id="create-section"></section>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="playlist-container">
      <h3 class="text-center title-text">Create A Playlist</h3>
      <form id="playlist-form">
        <td colspan="4">
          <div class="input-group mb-3">
            <input type="text" class="form-control" id="playlist-name" placeholder="Enter a name for your Playlist" aria-label="Playlist's Name" aria-describedby="button-addon2">
            <div class="button-div input-group-append">
              <button class="btn btn-primary playlist-btn" id="button-addon2" type="submit">Create</button>
            </div>
          </div>
        </td>
      </form>
    </div>
  </div>
</div>
<section class="anchor" id="movie-search-section"></section>
<div class="card-movie-search row justify-content-center">
    <div class="col-8">
      <!-- Movie Search -->
      <h1 class="text-center title-text" id="movie-header">Add Movies To Your Playlist</h1>
          <div class="form">
            <div class="col-m6">
              <div class="form-group">
                <select class="custom-select" id="playlist" placeholder="Select Playlist">
                  <option selected>Select a playlist</option>
                </select>
              </div>
            </div>

            <div class="input-group mb-3 playlist-form">
              <input class="form-control" id="movie-search" placeholder="Search and add movies" type="text" aria-label="Search and add movies" aria-describedby="button-addon2">
              <div class="button-div input-group-append">
                 <!-- button for ALL MOVIES -->
                <button class="btn btn-primary submitAll" id="button-addon2" type="submit">Search Movies</button>
              </div>
            </div>
            {{!-- <div class="col s12 m6">
                <button class="btn blue darken-3 z-depth-3 " id="submit" type="submit"><strong>Movie</strong>
                </button>
              </div> --}}
          </div>
    </div>
</div>
<!-- Search Results -->
<div class="search-results row justify-content-center" id="hide-show">
    <!-- Entry Form FOR ALL MOVIES -->
    <div class="container all-movies-container">
      <div class="justify-content-center" id="all-movies-row">
        <div class="col-12">
          <h6 class="search-text">Search Results for </h6>
          <div class="card mb-4">
            <div class="card-body">
            <div class="row" id="allmovie-list"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

  {{!-- Testing my playlists --}}
<section class="anchor" id="playlists-section"></section>
<div class="container p-3 mb-5">
  <h3 class="text-center title-text">Playlists</h3>
  <!-- Toggle Table -->
  <div id="accordion">
  <div class="card">
    <div class="card-header mb-3 hvr-shutter-out-horizontal" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" id="edit-playlist">
      <h5 class="text-center">Edit</h5>
    </div>
    <div id="collapseOne" class="collapse hide" aria-labelledby="edit-playlist" data-parent="#accordion">
      <div class="card-body">
          <table class="table table-borderless">
          <thead>
            <tr>
              <th class="text-center">Playlist's Name</th>
              <th class="text-center">Number of Movies</th>
              <th class="text-center">Playlist's Movies</th>
              <th class="text-center">Delete Playlist</th>
            </tr>
          </thead>
          <tbody>
            <tr id="form-row">
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  <!-- Playlist cards -->
  <div class="row mt-4">
    {{#each playlists}}
        <div class="col-4">
          <div class="card shadow p-3 mb-5 bg-white rounded" >
            <div class="card-body dropdown">
              <h2 class="text-center card-title text-primary trigger">{{name}}</h2>
               {{#each Movies}}
                <div class="card-text content text-center">
                  <img class="img-fluid img-thumbnail text-center mb-2" src={{image}} alt="#" height="150" width="150">
                  <h4 class="text-info text-center movieid"> {{title}}</h4>
                  <p class="text-center">Year: {{year}}</p>                
                  <p class="text-center btn btn-primary"><a class="button-link" href={{link}} target="_blank">IMDB</a></p>
                  <p class="text-center btn btn-danger"><i data-id={{this.id}} class="far fa-trash-alt" ></i></p>
                  <hr>
               </div>
               {{else}}
                  <p class="text-muted"> No movies have been added</p>
              {{/each}}
            </div>
          </div>
        </div>
    {{/each}}
  </div>
</div>

